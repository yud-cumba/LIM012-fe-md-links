{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "ident":2,
        "linebreak-style":[2,"unix"],
        "quotes":[2,"single"],
        "semi":[2,"always"],
        "no-console":2,
        "eqeqeq": 1,
        "no-multiple-empty-lines": [2, { "max": 2 }],
        "no-var": 0,
        "arrow-spacing": [2, { "before": true, "after": true }],
        "prefer-const": 2
    }
}